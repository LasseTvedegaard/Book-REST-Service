{
  "ConnectionStrings": {
    "DbAccessConnection": "Server=LASSE\\SQLEXPRESS;Database=BookLibrary;Integrated Security=True;TrustServerCertificate=True;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:/BookBuddy/backend/Logs/log-.txt",
          "rollingInterval": "Day",
          "rollingFileSizeLimit": true,
          "retainedFileCountLimit": 31,
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "createPath": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Key": "qwertyuiopasdfgh1234567890ZXCVBNM",
    "Issuer": "BookBuddy",
    "Audience": "BookBuddyUsers",
    "ExpiresInMinutes": 60
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  }
}